{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "WebFetch",
      "WebSearch",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(date:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/start-mcp.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
